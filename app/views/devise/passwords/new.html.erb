<% if resource.errors.any? %>
  <%= javascript_pack_tag 'shared/new_url_render' %>
  <%= render 'partial/error_message', { target: resource } %>
<% end %>

<div class="main">
  <div class="card devise-card">
    <h2 class="text-center mt-3">パスワード再設定</h2>
    <div class="mt-3 text-center">
      <p>新しいパスワードを登録するページのURLを</p>
      <p>ご登録いただいたメールアドレス宛に送付します。</p>
      <p>下記欄にメールアドレスをご入力の上、送信してください。</p>
    </div>

    <div class="form-wrap">    
        <%= form_with scope: resource, as: resource_name,
                        url: password_path(resource_name),
                     method: :post,
                      local: true do |f| %>

          <div class="form-group">
            <%= f.label :email %> <span class="badge badge-danger">必須</span>
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
          </div>

          <div class="actions">
            <%= f.submit "送信する", class: "btn btn-primary w-100" %>
          </div>

        <% end %>

        <div class="text-center mt-3">
          パスワードを思い出しましたか？
          <%= link_to "ログインする", new_user_session_path %>
        </div>

    </div>
  </div>
</div>
