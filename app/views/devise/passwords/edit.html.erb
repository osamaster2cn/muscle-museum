<div class="main">
  <div class="card devise-card">
    <h2 class="text-center mt-3">パスワード変更</h2>

    <div class="form-wrap">    
        <%= form_with scope: resource, as: resource_name,
                        url: password_path(resource_name),
                     method: :patch,
                      local: true do |f| %>
          <%= f.hidden_field :reset_password_token %>

          <div class="form-group">
            <%= f.label :password, "新しいパスワード" %> <span class="badge badge-danger">必須</span>
            <%= f.password_field :password, autofocus: "off", class: "form-control" %>
          </div>

          <div class="form-group">
            <%= f.label :password_confirmation %> <span class="badge badge-danger">必須</span>
            <%= f.password_field :password_confirmation, autofocus: "off", class: "form-control" %>
          </div>

          <div class="actions">
            <%= f.submit "変更する", class: "btn btn-primary w-100" %>
          </div>
        <% end %>
    </div>
  </div>
</div>

