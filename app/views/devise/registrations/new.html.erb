<% if resource.errors.any? %>
  <%= javascript_pack_tag 'shared/sign_up_url_render' %>
  <%= render 'partial/error_message', { target: resource } %>
<% end %>

<div class="main">
  <div class="card devise-card">
    <div class="form-wrap">
      <div class="form-group text-center">
        <h2 class="logo-img mx-auto"></h2>
      </div>
      <%= form_with scope: resource, as: resource_name,
                      url: registration_path(resource_name),
                      local: true do |f| %>

        <div class="form-group">
          <%= f.label :email %> <span class="badge badge-danger">必須</span>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
        </div>

        <div class="form-group">
          <%= f.label :name %> <span class="badge badge-danger">必須</span>
          <%= f.text_field :name, autofocus: true, class: "form-control" %>
        </div>

        <div class="form-group">
          <%= f.label :password %> <span class="badge badge-danger">必須</span>
          <%= f.password_field :password, autocomplete: "off", class: "form-control" %>
        </div>

        <div class="form-group">
          <%= f.label :password_confirmation %> <span class="badge badge-danger">必須</span>
          <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control" %>
        </div>

        <div class="actions">
          <%= f.submit "登録する", class: "btn btn-primary w-100" %>
        </div>

      <% end %>

        <div class="text-center mt-3">
          アカウントをお持ちですか？
          <%= link_to "ログインする", new_user_session_path %>
        </div>

    </div>
  </div>
</div>
